{
  "name": "trackmaster",
  "version": "1.0.0",
  "description": "Task management application",
  "main": "dist/server/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm install && prisma generate && tsc -p tsconfig.build.json && cd client && npm install && npm run build",
    "start": "NODE_ENV=production node dist/server/index.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "resend": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.50",
    "typescript": "^5.3.3",
    "prisma": "^5.10.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.8.2",
    "tsx": "^4.7.1",
    "vite": "^6.3.5",
    "zod": "^3.25.28"
  }
}
